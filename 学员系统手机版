    <script>
        // 底部导航切换效果
        document.querySelectorAll('.tab-item').forEach(item => {
            item.addEventListener('click', () => {
                document.querySelectorAll('.tab-item').forEach(tab => {
                    tab.classList.remove('active');
                });
                item.classList.add('active');
            });
        });
    </script>
